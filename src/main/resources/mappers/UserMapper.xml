<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanqiao.empsys.dao.UserMapper">
    <resultMap id="baseResultMap" type="com.lanqiao.empsys.model.Users">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>

    <select id="selectForLogin" parameterType="com.lanqiao.empsys.model.Users" resultMap="baseResultMap">
        select *
        from t_user
        where username=#{username} and password=#{password}
    </select>
</mapper>
